<%- include('../includes/head.ejs') %>
    <title><%= pageTitle %></title>
</head>
<body>
    <%- include('../includes/header.ejs') %>
    <% if(error) { %>
        <div class="user-message user-message--error">
            <%= error %>
        </div>
    <% } %>
    <div class="form-style-8">
        <h2>New Product Details</h2>
        <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="text" name="title" placeholder="Title" value="<%= oldInputs.title %>"/>
            <input type="number" name="price" placeholder="Price" value="<%= oldInputs.price %>"/>
            <textarea name="description" placeholder="Description"><%= oldInputs.description %></textarea>
            <input type="file" name="image" />
            <div><button style='margin-top: 5px' type="submit">Add Product</button></div>
        </form>
    </div>

<%- include('../includes/end.ejs') %>